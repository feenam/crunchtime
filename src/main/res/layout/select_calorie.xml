<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#919191">
    <!--
    layout/textbox to input calories
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/enter_calories_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="34sp"
            android:gravity="end"
            android:textColor="#ffd500"
            android:padding="5dip"
            android:background="@null"
            android:typeface="monospace"
            android:textStyle="bold">
        </EditText>
        <TextView
            android:text="@string/Calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="34sp"
            android:gravity="start"
            android:textColor="#ffd500"
            android:padding="5dip"
            android:background="@null"
            android:typeface="monospace"
            android:textStyle="bold"/>
    </LinearLayout>
    <!--
    making layout for showing workouts
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <!--
        left workout layout
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pushup_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/situp_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/squats_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/leglift_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/plank_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/jumpingjack_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--
        right workout layout
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pullup_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cycling_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/walking_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/jogging_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/swimming_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stairclimb_mins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffd500"
                android:padding="5dip"
                android:background="@null"
                android:typeface="monospace"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/backToMain"
        android:textSize="30sp"
        android:textColor="#000000"/>
</LinearLayout>